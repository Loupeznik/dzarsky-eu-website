---
import { ChevronLeftIcon, ExternalLinkIcon, GithubIcon } from '../components/icons';
import { Button } from '../components/ui/Button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../components/ui/Card';
import { projects } from '../config/projects';
import BaseLayout from '../layouts/BaseLayout.astro';
import { t } from '../lib/i18n';

const sortedProjects = [...projects].sort((a, b) => {
  if (a.featured !== b.featured) {
    return a.featured ? -1 : 1;
  }
  return b.startDate.getTime() - a.startDate.getTime();
});

const getStatusBadgeColor = (status: string) => {
  switch (status) {
    case 'completed':
      return 'bg-green-500/10 text-green-500';
    case 'in-progress':
      return 'bg-blue-500/10 text-blue-500';
    case 'archived':
      return 'bg-gray-500/10 text-gray-500';
    default:
      return 'bg-gray-500/10 text-gray-500';
  }
};

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short' });
};
---

<BaseLayout
  title="All Projects - Dominik Zarsky"
  description="Browse all my projects including web applications, APIs, and tools."
>
  <div class="min-h-screen py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="mb-12">
          <a href="/" class="inline-flex items-center text-sm hover:underline mb-4">
            <ChevronLeftIcon size={16} class="mr-1" client:load />
            Back to Home
          </a>
          <h1 class="text-4xl md:text-5xl font-bold mb-4">{t('projects.title')}</h1>
          <p class="text-muted-foreground text-lg">
            A collection of projects I've worked on over the years
          </p>
        </div>

        <div class="space-y-8">
          {
            sortedProjects.map((project) => (
              <Card class="overflow-hidden">
                <div class="md:flex">
                  {project.image && (
                    <div class="md:w-1/3 bg-muted/30 flex items-center justify-center">
                      <img
                        src={project.image}
                        alt={project.name}
                        class="w-full h-64 md:h-full object-contain"
                      />
                    </div>
                  )}
                  <div class={project.image ? 'md:w-2/3' : 'w-full'}>
                    <CardHeader>
                      <div class="flex items-start justify-between">
                        <div class="flex-1">
                          <CardTitle class="text-2xl">{project.name}</CardTitle>
                          <CardDescription class="mt-2">{project.description}</CardDescription>
                        </div>
                        <span
                          class={`px-2 py-1 rounded text-xs font-medium ml-4 ${getStatusBadgeColor(project.status)}`}
                        >
                          {project.status}
                        </span>
                      </div>
                      <div class="text-sm text-muted-foreground mt-2">
                        Started: {formatDate(project.startDate)}
                      </div>
                    </CardHeader>
                    <CardContent class="space-y-4">
                      {project.longDescription && (
                        <p class="text-sm leading-relaxed">{project.longDescription}</p>
                      )}
                      <div>
                        <h3 class="text-sm font-semibold mb-2">{t('projects.technologies')}</h3>
                        <div class="flex flex-wrap gap-2">
                          {project.technologies.map((tech) => (
                            <span class="px-2 py-1 rounded bg-secondary text-secondary-foreground text-xs">
                              {tech}
                            </span>
                          ))}
                        </div>
                      </div>
                      <div class="flex gap-2 pt-2">
                        {project.githubUrl && (
                          <a href={project.githubUrl} target="_blank" rel="noopener noreferrer">
                            <Button variant="outline" size="sm">
                              <GithubIcon size={16} class="mr-1" client:load />
                              {t('projects.viewCode')}
                            </Button>
                          </a>
                        )}
                        {project.demoUrl && (
                          <a href={project.demoUrl} target="_blank" rel="noopener noreferrer">
                            <Button size="sm">
                              <ExternalLinkIcon size={16} class="mr-1" client:load />
                              {t('projects.viewDemo')}
                            </Button>
                          </a>
                        )}
                      </div>
                    </CardContent>
                  </div>
                </div>
              </Card>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
