---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import Skills from '../components/sections/Skills.astro';
import WorkExperience from '../components/sections/WorkExperience.astro';
import Projects from '../components/sections/Projects.astro';
import Contact from '../components/sections/Contact.astro';
import { generateWebsiteSchema, generatePersonSchema } from '../lib/seo';

const structuredData = {
  '@context': 'https://schema.org',
  '@graph': [generateWebsiteSchema(), generatePersonSchema()],
};
---

<BaseLayout structuredData={structuredData}>
  <Hero />
  <Skills />
  <WorkExperience />
  <Projects />
  <Contact />
</BaseLayout>
