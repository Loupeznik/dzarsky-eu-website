---
import { skillsByCategory } from '../../config/skills';
import { t } from '../../lib/i18n';
import { Card, CardContent, CardHeader, CardTitle } from '../ui/Card';
---

<section id="skills" class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-12">
      {t('skills.title')}
    </h2>
    <div class="grid gap-6 md:grid-cols-2">
      <Card>
        <CardHeader>
          <CardTitle>{t('skills.languages')}</CardTitle>
        </CardHeader>
        <CardContent>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
            {
              skillsByCategory.languages.map((skill) => (
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 flex items-center justify-center shrink-0">
                    <img src={skill.logo} alt={skill.name} class="w-8 h-8 brightness-110" />
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-baseline gap-2">
                      <h3 class="font-medium text-sm">{skill.name}</h3>
                      <span class="text-xs text-muted-foreground whitespace-nowrap">
                        {skill.yearsOfExperience} {t('skills.years')}
                      </span>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>{t('skills.frameworks')}</CardTitle>
        </CardHeader>
        <CardContent>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
            {
              skillsByCategory.frameworks.map((skill) => (
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 flex items-center justify-center shrink-0">
                    <img src={skill.logo} alt={skill.name} class="w-8 h-8 brightness-110" />
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-baseline gap-2">
                      <h3 class="font-medium text-sm">{skill.name}</h3>
                      <span class="text-xs text-muted-foreground whitespace-nowrap">
                        {skill.yearsOfExperience} {t('skills.years')}
                      </span>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>{t('skills.tools')}</CardTitle>
        </CardHeader>
        <CardContent>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
            {
              skillsByCategory.tools.map((skill) => (
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 flex items-center justify-center shrink-0">
                    <img src={skill.logo} alt={skill.name} class="w-8 h-8 brightness-110" />
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-baseline gap-2">
                      <h3 class="font-medium text-sm">{skill.name}</h3>
                      <span class="text-xs text-muted-foreground whitespace-nowrap">
                        {skill.yearsOfExperience} {t('skills.years')}
                      </span>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>{t('skills.cloud')}</CardTitle>
        </CardHeader>
        <CardContent>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
            {
              skillsByCategory.cloud.map((skill) => (
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 flex items-center justify-center shrink-0">
                    <img src={skill.logo} alt={skill.name} class="w-8 h-8 brightness-110" />
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-baseline gap-2">
                      <h3 class="font-medium text-sm">{skill.name}</h3>
                      <span class="text-xs text-muted-foreground whitespace-nowrap">
                        {skill.yearsOfExperience} {t('skills.years')}
                      </span>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </CardContent>
      </Card>
    </div>
  </div>
</section>
