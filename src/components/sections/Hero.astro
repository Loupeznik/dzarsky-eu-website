---
import { siteConfig } from '../../config/site';
import { t } from '../../lib/i18n';
import { Button } from '../ui/Button';
---

<section id="home" class="flex items-center justify-center min-h-screen">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center space-y-6">
      <h1 class="text-5xl md:text-7xl font-bold tracking-tight">
        {t('hero.greeting')}
      </h1>
      <h2 class="text-2xl md:text-3xl text-muted-foreground">
        {t('hero.title')}
      </h2>
      <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto">
        {t('hero.description')}
      </p>
      <div class="flex flex-wrap gap-4 justify-center pt-4">
        <a href={siteConfig.social.github} target="_blank" rel="noopener noreferrer" class="cursor-pointer inline-block">
          <Button variant="outline" size="lg">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="mr-2"
            >
              <path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
            GitHub
          </Button>
        </a>
        <a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer" class="cursor-pointer inline-block">
          <Button variant="outline" size="lg">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="mr-2"
            >
              <path
                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
              ></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
            LinkedIn
          </Button>
        </a>
        <a href={`mailto:${siteConfig.social.email}`} class="cursor-pointer inline-block">
          <Button variant="outline" size="lg">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="mr-2"
            >
              <rect x="2" y="4" width="20" height="16" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
            Email
          </Button>
        </a>
      </div>
    </div>
  </div>
</section>
