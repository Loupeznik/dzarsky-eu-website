---
import { siteConfig } from '../../config/site';
import { t } from '../../lib/i18n';
import { Button } from '../ui/Button';
import { GithubIcon, LinkedinIcon, EmailIcon } from '../icons';
---

<section id="home" class="flex items-center justify-center min-h-screen">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center space-y-6">
      <h1 class="text-5xl md:text-7xl font-bold tracking-tight">
        {t('hero.greeting')}
      </h1>
      <h2 class="text-2xl md:text-3xl text-muted-foreground">
        {t('hero.title')}
      </h2>
      <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto">
        {t('hero.description')}
      </p>
      <div class="flex flex-col gap-6 items-center pt-4">
        <div class="flex flex-wrap gap-4 justify-center">
          <a href={siteConfig.social.github} target="_blank" rel="noopener noreferrer" class="cursor-pointer inline-block">
            <Button variant="outline" size="lg">
              <GithubIcon class="mr-2" client:load />
              GitHub
            </Button>
          </a>
          <a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer" class="cursor-pointer inline-block">
            <Button variant="outline" size="lg">
              <LinkedinIcon class="mr-2" client:load />
              LinkedIn
            </Button>
          </a>
          <a href={`mailto:${siteConfig.social.email}`} class="cursor-pointer inline-block">
            <Button variant="outline" size="lg">
              <EmailIcon class="mr-2" client:load />
              Email
            </Button>
          </a>
        </div>
        <a href="#contact" class="cursor-pointer inline-block">
          <Button size="lg">
            {t('hero.getInTouch')}
          </Button>
        </a>
      </div>
    </div>
  </div>
</section>
